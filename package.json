{
  "name": "conductor-install",
  "version": "0.0.2",
  "description": "Conductor spec-driven development CLI - Install Conductor in any project with npx conductor-install",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonkimi/conductor-install.git"
  },
  "homepage": "https://github.com/jonkimi/conductor-install",
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "bin": {
    "conductor": "./dist/index.js",
    "conductor-4-all": "./dist/index.js",
    "conductor-install": "./dist/conductor-install.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "prebuild": "npx tsx scripts/bundle-conductor.ts",
    "build": "tsup",
    "postbuild": "cp -r src/conductor dist/conductor",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/gradient-string": "^1.1.6",
    "@types/node": "^25.0.3",
    "@types/yargs": "^17.0.35",
    "@vitest/coverage-v8": "^2.1.8",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@inquirer/select": "^5.0.3",
    "fs-extra": "^11.3.3",
    "gradient-string": "^3.0.0",
    "smol-toml": "^1.6.0",
    "yargs": "^18.0.0"
  }
}