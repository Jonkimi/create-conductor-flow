{
  "hooks": {
    "before:init": [
      "npm install",
      "npm run build",
      "npm test",
      "npm run update-readme"
    ]
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release ${version}\n\n${changelog}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "ignoreRecommendedBump": true
    }
  }
}